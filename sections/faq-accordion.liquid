{% liquid
  assign title = section.settings.title
  assign description = section.settings.description
  assign padding_top = section.settings.padding_top | default: 20
  assign padding_bottom = section.settings.padding_bottom | default: 20
%}

<div class="faq-content page-width" style="padding-top: {{ padding_top }}px; padding-bottom: {{ padding_bottom }}px;">
  <div class="faq-content__header">
    <h2 class="faq-content__title">{{ title }}</h2>
    <p class="faq-content__description">{{ description }}</p>
  </div>

  <div class="faq-list">
    {% for block in section.blocks %}
      {% render 'faq-item',
        title: block.settings.question,
        content: block.settings.answer,
        icon: block.settings.icon,
        is_open: block.settings.is_open
      %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "FAQ Accordion",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Description"
    },
    {
      "type": "number",
      "id": "padding_top",
      "label": "Padding Top (px)",
      "default": 20
    },
    {
      "type": "number",
      "id": "padding_bottom",
      "label": "Padding Bottom (px)",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content",
          "default": "Content"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "checkbox",
          "id": "is_open",
          "label": "Open by default",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Accordion",
      "category": "Custom",
      "blocks": [
        {
          "type": "faq_item",
          "settings": {
            "title": "What is your return policy?",
            "content": "You can return any item within 30 days of purchase.",
            "icon": "",
            "is_open": false
          }
        }
      ]
    }
  ]
}
{% endschema %}
