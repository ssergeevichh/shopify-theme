{% liquid
  assign title = section.settings.title
  assign description = section.settings.description
  assign padding_top = section.settings.padding_top | default: 20
  assign padding_bottom = section.settings.padding_bottom | default: 20
%}

{{ 'section-faq.css' | asset_url | stylesheet_tag }}
<script src="{{ 'faq.js' | asset_url }}" defer="defer"></script>

<faq-accordion
  class="faq-content page-width"
  style="padding-top: {{ padding_top }}px; padding-bottom: {{ padding_bottom }}px;"
>
  <div class="faq-content__header">
    <h2 class="faq-content__title">{{ title }}</h2>
    <p class="faq-content__description">{{ description }}</p>
  </div>

  <div class="faq-list">
    {% for block in section.blocks %}
      {% render 'faq-item',
        title: block.settings.title,
        content: block.settings.content,
        icon: block.settings.icon,
        icon_position: block.settings.icon_position,
        is_open: block.settings.is_open
      %}
    {% endfor %}
  </div>
</faq-accordion>

{% schema %}
{
  "name": "FAQ Accordion",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Description"
    },
    {
      "type": "number",
      "id": "padding_top",
      "label": "Padding Top (px)",
      "default": 20
    },
    {
      "type": "number",
      "id": "padding_bottom",
      "label": "Padding Bottom (px)",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content",
          "default": "Content"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "checkbox",
          "id": "is_open",
          "label": "Open by default",
          "default": false
        },
        {
          "type": "select",
          "id": "icon_position",
          "label": "Icon Position",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "right", "label": "Right" }
          ],
          "default": "left"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Accordion",
      "category": "Custom",
      "blocks": [
        {
          "type": "faq_item",
          "settings": {
            "title": "What is your return policy?",
            "content": "You can return any item within 30 days of purchase.",
            "icon": "",
            "is_open": false
          }
        }
      ]
    }
  ]
}
{% endschema %}
