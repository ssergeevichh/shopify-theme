{%- comment -%}
  FAQ Item Snippet

  Accepts:
    - title: {String} The FAQ question
    - content: {String} The FAQ answer
    - icon: {String} URL for icon for the FAQ item
    - is_open: {Boolean} If true, the answer is visible by default

  Usage:
  {% render 'faq-item',
    title: 'What is your return policy?',
    content: 'You can return any item within 30 days of purchase.',
    icon: 'icon-url.svg',
    is_open: false
  %}
{%- endcomment -%}

{% liquid
  assign icon_url = icon | image_url
  assign fallback_icon = 'icon-info.svg' | asset_url
%}

<div class="faq-item {% if is_open %}faq-item--open{% endif %}">
  {% if icon != blank %}
    <img
      src="{{ icon_url }}"
      alt="FAQ Icon"
      class="faq-item__icon"
      width="30px"
      height="30px"
    >
  {% else %}
    <img
      src="{{ fallback_icon }}"
      alt="FAQ Icon"
      class="faq-item__icon"
      width="30px"
      height="30px"
    >
  {% endif %}

  <div class="faq-item__content">
    <h3 class="faq-item__question">
      {{ title | default: 'Title' }}
    </h3>
    <div class="faq-item__answer">
      {{ content | default: 'Content' }}
    </div>
  </div>
</div>
