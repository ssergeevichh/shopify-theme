{%- comment -%}
  Props:
  - title (string) — the title of the text block
  - subtitle (string) — the subtitle of the text block
  - description (string) — the description text
  - cta_text (string) — cta button text
  - cta_link (string) — URL for the cta button
  - cta_bg_color (string) — background color for the cta button
  - cta_text_color (string) — text color for the cta button
  - is_full_width (boolean) — true if this block should take full width
{%- endcomment -%}

{% liquid
  assign yt_raw_id = video_url | split: 'v=' | last | split: '&' | first
  assign vimeo_id = video_url | split: '/' | last
%}

<div
  class="split-content__video split-content__block {% if total_blocks == 1 %}split-content__block--full{% endif %}"
>
  {% if video_mp4 != blank %}
    <video
      {% if autoplay %}
        autoplay
      {% endif %}
      {% if loop %}
        loop
      {% endif %}
      {% if muted %}
        muted
      {% endif %}
      playsinline
      controls
      style="width: 100%; height: auto;"
    >
      <source src="{{ video_mp4 }}" type="video/mp4">
    </video>

  {% elsif video_url %}
    {% if video_url contains 'youtube.com' or video_url contains 'youtu.be' %}
      <iframe
        width="100%"
        height="315"
        src="https://www.youtube.com/embed/{{ yt_raw_id }}?autoplay={{ autoplay | json }}&mute={{ muted | json }}{% if loop %}&loop=true&playlist={{ yt_raw_id }}{% endif %}"
        title="YouTube video"
        frameborder="0"
        allow="autoplay; encrypted-media"
        allowfullscreen
      ></iframe>

    {% elsif video_url contains 'vimeo.com' %}
      <iframe
        src="https://player.vimeo.com/video/{{ vimeo_id }}?autoplay={{ autoplay | json }}&muted={{ muted | json }}&loop={{ loop | json }}"
        width="100%"
        height="315"
        frameborder="0"
        allow="autoplay; fullscreen; picture-in-picture"
        allowfullscreen
      ></iframe>
    {% endif %}
  {% endif %}
</div>
